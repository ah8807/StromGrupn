@model web.Models.Kalkulator

@{
    ViewData["Title"] = "Index";
}
<div class="card bg-light text-dark opacity-50">
    <div class="opacity.4">
        <div class="row justify-content-center">
            <h1>Kalkulator</h1>
        </div>
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <tr>Izberite željeni avto</tr>
                    <tr>@Html.DropDownListFor(r => r.izbranAvto,
                        new SelectList(Model.Avti, "Value", "Text"))</tr>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="kilometerPovprecje" class="control-label">Koliko kilometrov prevozite
                            letno</label>
                        <input asp-for="kilometerPovprecje" class="form-control" />
                        <span asp-validation-for="kilometerPovprecje" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="porabaPovprecje" class="control-label">Trenutna poraba goriva na 100km</label>
                        <input asp-for="porabaPovprecje" class="form-control" />
                        <span asp-validation-for="porabaPovprecje" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <tr>Kater energent uporablja vaš avto</tr>
                    <tr>@Html.DropDownListFor(r => r.izbranEnergent,
                        new SelectList(Model.Energenti, "Value", "Text"))
                    </tr>
                </div>


            </div>
            <div class="row justify-content-center">
                <div class="form-group">
                    <input type="submit" value="Izračunaj" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
</div>
