@model web.Models.Kalkulator

@{
    ViewData["Title"] = "Index";
}
<div class="card bg-light text-dark opacity-50">
    <div class="opacity.4">
        <div class="row justify-content-center">
            <h1>Kalkulator</h1>
        </div>
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <tr>Izberite željeni avto</tr>
                    <div class="col-md-10">  
                        @Html.DropDownListFor(c => c.izbranAvto, Model.Avti, null, new { @class = "selectpicker", data_live_search = "true" })  
                    </div>  
                    <!--<div class="col-md-4 align-center">
                        <tr>Izberite željeni avto</tr>
                        <tr>@Html.DropDownListFor(r => r.izbranAvto,
                            new SelectList(Model.Avti, "Value", "Text"))</tr>
                    </div>-->
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="kilometerPovprecje" class="control-label">Koliko kilometrov prevozite
                            letno</label>
                        <input asp-for="kilometerPovprecje" class="form-control" />
                        <span asp-validation-for="kilometerPovprecje" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="porabaPovprecje" class="control-label">Trenutna poraba goriva na 100km</label>
                        <input asp-for="porabaPovprecje" class="form-control" />
                        <span asp-validation-for="porabaPovprecje" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <tr>Kater energent uporablja vaš avto</tr>
                    <tr>@Html.DropDownListFor(r => r.izbranEnergent,
                        new SelectList(Model.Energenti, "Value", "Text"))
                    </tr>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="izbranStrosekAvtaObNakupu" class="control-label">Cena vašega avta ob
                            nakupu</label>
                        <input asp-for="izbranStrosekAvtaObNakupu" class="form-control" />
                        <span asp-validation-for="izbranStrosekAvtaObNakupu" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <tr>Izberite željeno toplotno črpalko</tr>
                    <tr>@Html.DropDownListFor(r => r.izbranaCrpalka,
                        new SelectList(Model.Crpalke, "Value", "Text"))</tr>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="strosekTrenutnegaOgrevanja" class="control-label">Koliko vas stane trenutno ogrevanje?</label>
                        <input asp-for="strosekTrenutnegaOgrevanja" class="form-control" />
                        <span asp-validation-for="strosekTrenutnegaOgrevanja" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 align-center">
                    <div class="form-group">
                        <label asp-for="izbranaPovrsina" class="control-label">Velikost prostora vaše nepremičnine (v
                            m2)</label>
                        <input asp-for="izbranaPovrsina" class="form-control" />
                        <span asp-validation-for="izbranaPovrsina" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="form-group">
                    <input type="submit" value="Izračunaj" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
<!-- Latest compiled and minified CSS -->  
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">  
<!-- Latest compiled and minified JavaScript -->  
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>  
<!-- (Optional) Latest compiled and minified JavaScript translation files -->  
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js"></script>  
}